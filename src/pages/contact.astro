---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Talia Sable" description="Get in touch">
  <article class="contact">
    <h1>Contact</h1>

    <section class="contact-intro">
      <p>I am available sparingly: to the right kind of person who will light up my life. I am looking for mutual delight and enjoyment. Life's too short for less.</p>
    </section>

    <section class="contact-form">
      <div class="typeform-embed">
        <div data-tf-live="01KGNGX5YG1DF0Y7BKXXDBQ5GZ"></div>
        <script is:inline src="//embed.typeform.com/next/embed.js"></script>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .contact {
    max-width: 990px;
    margin: 0 auto;
    padding: 1.5rem 2rem 4rem;
    position: relative;
    z-index: 1;
  }

  .contact h1 {
    margin-bottom: 2rem;
    text-align: center;
    color: var(--color-accent);
  }

  .contact-intro {
    margin-bottom: 3rem;
    text-align: center;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .contact-intro p {
    line-height: 1.8;
    margin-bottom: 1rem;
    font-size: 1.2rem;
    color: var(--color-text);
    opacity: 0.9;
  }

  .contact-intro p:last-child {
    margin-bottom: 0;
  }

  .contact-form {
    margin-top: 2rem;
    width: 100%;
  }

  .typeform-embed {
    min-height: 600px;
    width: 100%;
  }

  .footer-image {
    width: 100%;
    height: 60vh;
    min-height: 400px;
    overflow: hidden;
  }

  .footer-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  @media (max-width: 768px) {
    .contact {
      padding: 2rem 1.5rem;
    }

    .typeform-embed {
      min-height: 500px;
    }

    .contact-intro p {
      font-size: 1.1rem;
    }
  }
</style>
